section.hero(id="hero")
  .container
    header.header
      .header__logo
        .logo АВ
      .header__btns
        nav.menu
          - var items =["Главная","Обо мне","Навыки", "Работы", "Отзывы", "Связаться"];
            ul.menu__list
              each item in items
                li.menu__item
                  a.menu__link #{item}
      .header__links
        - var icons = ["insta", "vk", "github"];
        ul.socials 
          each item in icons
            li.socials__item
              a(href="").socials__link
                +icon(item, "socials__icon")
      button.hamburger__menu(type="button")
        span.hamburger__menu-items
    .hero__content
      .user-data
        .user-data__desc Личный сайт веб разработчика
        .user-data__name
          h1 Анна Венедиктова
    a(href="#about-section").hero__bottom-btn
      span.hero__bottom-text Скролл
      span.hero__bottom-wrap
        +icon('scroll', 'hero__bottom-icon')