section.hero(id="hero")
  .container
    header.header
      .header__logo
        .logo АВ
      .header__btns
        nav.menu
          - var items =[["Главная", "hero"],["Обо мне", "about-section"], ["Навыки", "skills"], ["Работы", "works"],["Отзывы", "reviews"],["Связаться", "contacts"]];
            ul.menu__list
              each item in items
                li.menu__item
                  a(href=`#${item[1]}`).menu__link #{item[0]}
      .header__links
        - var icons = ["insta", "vk", "github"];
        ul.socials 
          each value, key in {vk:"https://vk.com/venediktova_am", github:"https://github.com/Anna185/", insta:"https://www.instagram.com/anna.ven/"}
            li.socials__item
              a(class="socials__link" href=`${value}`)
                +icon(`${key}`, "socials__icon")
      button.hamburger__menu(type="button")
        span.hamburger__menu-items
    .hero__content
      .user-data
        .user-data__desc Личный сайт веб разработчика
        .user-data__name
          h1 Анна Венедиктова
    a(href="#about-section").hero__bottom-btn
      span.hero__bottom-text Скролл
      span.hero__bottom-wrap
        +icon('scroll', 'hero__bottom-icon')