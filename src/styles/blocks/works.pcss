.works__arrows-icon {
  width: 10px;
  height: 8px;
  
 
}

.works__arrows--up {
  transform: rotate(-90deg);
  fill: #464d62;
}

.works__arrows--down {
  transform: rotate(-90deg);
  fill: #464d62;

}

.works__arrows.active {
  color:#ffff;
}

.works__arrows.works__arrows--up {
  background-color: transparent;
  width: 40px;
  height: 40px;
  background: #353e4e;
  &:hover {
  background:#5500f2;
}
}

.works__arrows.works__arrows--down {
  background-color: transparent;
  width: 40px;
  height: 40px;
  background: #353e4e;
  &:hover {
    background:#5500f2;
}
}


.works__pagination-items-btn {
  display: block;
  height: 100%;
  width: 100%;
  border: none;
  padding: 0;

  &:hover {
    outline: 3px solid #dc9322;
  }
}

.works__pagination-items.active {
	border: 3px solid #dc9322;
}

.works__right-row {
  width: 80%;
  margin-left:5% ;
}

.works__col-right {
  width: 100%;
}