.works {
  margin-top: 6%;

  @include tablets {
    //margin-top: 45%;
  }
}


.container--works {
  margin-bottom: 100px;;
}

.works__title {
  margin-bottom: 50px;
}
.works__title h2 {
  color: #464d62;
  font-family: "Open Sans";
  font-size: 36px;
  font-weight: 700;
}

.works__slider {
  position: relative;
  width: 100%;

  
 
}

.slider__img {
  width: 100%;
  height: 100%;
  object-fit: cover;

  
}

.works__content {
  display: flex;

  @include tablets {
    flex-direction: column;
  }
} 

.works__right-number {
  
  color: #e6e6e6;
  font-family: "Open Sans - Extrabold";
  font-size: 16.75rem;
  font-weight: 400;
  width: 20%;

  @include tablets {
    display: none;
  }

  @media screen and (max-width:1100px) {
    display: none;
  }
  
}
.works__control {
  position: absolute;
  bottom: 9%;
  right: 0;

  @media screen and (max-width:552px) {
    display: none;
  }
  @media screen and (max-width:960px) {
    width: 25%;
  }
}

.works__col-left {  
  width: 60%;
  flex-shrink: 0;

  @include tablets {
    width: 100%;
  }

  @media screen and (max-width:960px) {
    //-width: 50%;
}
